<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question1"
    android:background="#FF0000">

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="698dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_border">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="159dp"
            android:layout_height="129dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="128dp"
            android:layout_marginTop="0dp"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/userlogo"
            app:civ_border_width="0dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#3f51b5"
            app:civ_shadow_radius="10dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip6"
            android:layout_width="187dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="171dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="17dp"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="165dp"
            android:layout_marginBottom="445dp"
            android:background="@drawable/rounded_button"
            android:text="Log In"
            android:textAlignment="center" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/circularImageView"
            android:layout_width="95dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="145dp"
            android:layout_marginTop="185dp"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/twitter"
            app:civ_border_width="0dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#3f51b5"
            app:civ_shadow_radius="10dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/circularImageView6"
            android:layout_width="103dp"
            android:layout_height="89dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="234dp"
            android:layout_marginTop="185dp"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/googleplus"
            app:civ_border_width="0dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#3f51b5"
            app:civ_shadow_radius="10dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/circularImageView5"
            android:layout_width="103dp"
            android:layout_height="89dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="186dp"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/fb"
            app:civ_border_width="0dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#3f51b5"
            app:civ_shadow_radius="10dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="274dp"
            android:layout_marginEnd="174dp"
            android:text="or"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="313dp"
            android:layout_marginEnd="99dp"
            android:text="User name / Email address"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="259dp"
            android:ems="10"
            android:hint="Enter your email"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColorHint="#FFFFFF" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="161dp"
            android:layout_marginBottom="229dp"
            android:text="Password"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="182dp"
            android:ems="10"
            android:hint="•••••••••"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColorHint="#FFFFFF" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="120dp"
            android:text="Remember me" />

        <Button
            android:id="@+id/button"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/rounded_button"
            android:text="                   DONE                      >" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="133dp"
            android:layout_marginBottom="22dp"
            android:clickable="true"
            android:text="Forgot Password?"
            android:textColor="#FFFFFF"
            tools:ignore="TouchTargetSizeCheck" />

    </RelativeLayout>
</RelativeLayout>